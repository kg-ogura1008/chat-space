.side_bar
  .side_bar__header
    %ul
      %li.login-name
        %h1
          = current_user.name
      %li.icon
        = link_to new_group_path do
          %i.fa.fa-cog
      %li.icon
        = link_to edit_user_path(current_user) do
          %i.fa.fa-edit
  .side_bar__groups
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
